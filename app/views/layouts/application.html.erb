<!DOCTYPE html>
<html>
<head>

  <title><%= yield(:title) %></title>
  
 <meta name= 'description',  content="<%= yield(:metadesc) %>" >
  
  <meta name= 'keywords',  content= "<%= yield(:metawords) %>" >
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='top-panel'>
    
    <ul class='nav'>
      <li><%= link_to 'На главную',:root %></li>
      <li><%= link_to 'О проекте', '/about'%></li>
      <% if current_user %>
        <li class='stretchy'><a disabled='disabled'><%= current_user.email %></a></li>
      <% end %>
    </ul>
    <div class='search-container'>
        <%= form_tag('/search', method: "get", remote: true) do %>
          <%= label_tag(:search, '') %>
               <div class='form-ui default'>
              <%= text_field_tag(:search, nil, class: 'form-input-search') %>
              </div>
      <%= submit_tag("Искать!", class: 'search-submit') %>
        <% end %>
      
      <table class='search-results'>
      </table>
    </div>
  </div>
<%= yield %>

</body>
</html>
