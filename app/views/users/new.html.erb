<% content_for :title, 'Добавить пользователя'  %>
<div class='container'>
  <div class='acc-wrap'>
  <%if admin %>
    <h1>Добавить пользователя</h1>
    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> errors appeared, when trying to sign up:</h2>
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
    
      <% end %>
        <%= f.label :email %><br />
       
        <div class='form-ui email'>
         
          <%= f.text_field :email, class:'form-input', data:{format: 'email'} %>
        </div>
         <br/>
        <%= f.label :password %><br />
       
        <div class='form-ui default'>
          
          <%= f.password_field :password, class:'form-input' %>
        </div>
         <br/>
    
          <%= f.submit "Добавить!" %>
         <br/>
    <% end %>
  <% else %>
    <h1>Нет доступа к странице</h1>
  <% end %>
     <br/>
 <button class='ui-link'><%= link_to 'Назад' , :back %></button>
  </div>
</div>