<% content_for :title, 'Электронное Расписание МАИ'  %>
<% content_for :metadesc, 'Электронное расписание 4 факультета маи' %>
<% content_for :metawords, 'МАИ, ФРЭЛА, 4 факультет, электронное расписание, веб расписание' %>

<div class='container'>
  <div class='wrap'>
    <% @groups_by_course_number.each do |cnumber, groups| %>
    <div class='year'>
      <h3><%=cnumber.to_s%> курс</h3>
      <ul class='group-list'>
       <%groups.each do |group|%>
        <li id='<%= group.id %>'>
          <%= link_to  group.name , group, class: 'ui-list' %>
                <% if admin %>
                  <div class='btn-con'><%= link_to 'Delete', group, remote: true, method: :delete%></div>
          <div class='btn-con'><%= link_to 'Copy', 'groups/'+group.id.to_s+'/copy/'+(group.name.slice(0..4) + (group.name.slice(5, 1).to_i + 1).to_s + group.name.slice(6, 1)).to_s, method: :copy%></div>
                <% end %>
         </li>
       <% end %>
      </ul>
    </div>
    <% end %>
    
   
  </div>
    <% if admin %>
   <div class='center'>
      
     <%= link_to  'Добавить групппу', 'groups/new', class:'ui-link high' %>
     <%= link_to  'Добавить пользователя', 'register', class:'ui-link high' %>
      
    </div>
  <% end %>
</div>