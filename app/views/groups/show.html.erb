<% content_for :title, 'Расписание ' + @group.name  %>
<% content_for :metadesc, 'Расписание ' + @group.name  %>
<% content_for :metawords, @group.name + ', занятия, электронное расписание, веб расписание' %>

<% @days = ["Понедельник", "Вторник", "Среда", "Четверг", "Пятница", "Суббота"] %>
<div class='days'>
  <h2><%= @group.name %></h2>
	<% @days.each do |day|%>
  <div id='<%=day%>' class='day-box'>
   <h3><%=day%></h3>
    <table>
                <tr class='head'>
                    <td>Время</td>	
 
                    <td>Аудитория</td>
                    <td>Предмет</td>
                    <td>Преподаватель</td>
                </tr>
      <% @day_array = @group.lessons.find_all{|lesson| lesson.day.include?(day)}.sort_by!{|lesson| lesson.time} %>
                <% @day_array.each do |lesson| %>
                  <tr>
                    <td><%= parsetime lesson.time%></td>	
                    <td><%= lesson.room %></td>
                    <td><%= lesson.subject %></td>
                    <td><%= lesson.teacher %></td>
                    
                  </tr>
                <%end%>
    </table>
  </div>
	<%end%>
<br/>
  <% if admin %>
   <div class='center'>
      
        <button class='ui-link high'><%= link_to  'Редактировать групппу', edit_group_path(@group)%></button>
        
    </div>
  <% end %>
  <button class='ui-link'><%= link_to 'Назад ', :root %></button>
</div>